{# On utilise ici le layout général #}
{% extends "JTIRPlatformBundle::layout.html.twig" %}

{% block title %}
    Inscription - {{ parent() }}
    {# parent() affiche le reste du block title. On ne fait que rajouter "Inscription - " au titre de la page #}
{% endblock %}

{% block menu %}
    <li><a href="{{ path('jtir_platform_index') }}">Accueil</a></li>
    <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
    <li><a href="{{ path('jtir_platform_bibliotheque_visiteur') }}">Bibliothèque de contes</a></li>
{% endblock %}

{% block body %}

    <!-- INSCRIPTION -->
    <section id="connexion">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 formConnexion">
                    <img src="{{ asset('img/snail.png') }}" alt="Un escargot" id="escargot">
                    <img src="{{ asset('img/bee.png') }}" alt="Une abeille" id="abeille">
                    <img src="{{ asset('img/rat.png') }}" alt="Un rat" id="rat">

                    <div class="col-lg-12">
                        <h2>Inscription</h2>
                        <hr>
                    </div>

                    {{ form_start(form, {'method': 'post',
                        'action': path('pugx_enseignant_registration')}) }}

                    {# Les erreurs générales du formulaires. #}
                    {{ form_errors(form) }}

                    <div class="col-lg-4">
                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.civilite) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.civilite) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.civilite, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.identite.nom) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.identite.nom) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.identite.nom, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.identite.prenom) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.identite.prenom) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.identite.prenom, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.adresse.departement) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.adresse.departement) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.adresse.departement, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.adresse.ville) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.adresse.ville) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.adresse.ville, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.adresse.etablissement) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.adresse.etablissement) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.adresse.etablissement, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div> <!-- /.col-lg-4 -->

                    <div class="col-lg-4 col-lg-offset-4">
                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.email) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.email) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.username) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.username) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.username, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.plainPassword.first) }}

                            {# Affichage des erreurs pour ce champ précis #}
                            {{ form_errors(form.plainPassword.first) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class':'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {# Génération du label #}
                            {{ form_label(form.plainPassword.second) }}

                            {# Génération de l'input #}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div> <!-- /.col-lg-4 -->

                    <div class="col-lg-12">
                        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-def btn-form center-block"/>
                    </div>

                    {{ form_end(form) }}

                </div><!-- /.col-lg-12.formConnexion -->
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </section> <!-- /.section -->
    <!-- /INSCRIPTION -->

{% endblock %}

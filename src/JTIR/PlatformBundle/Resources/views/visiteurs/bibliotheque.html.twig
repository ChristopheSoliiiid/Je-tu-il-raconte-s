{# On utilise ici le layout général #}
{% extends "JTIRPlatformBundle::layout.html.twig" %}

{% block title %}
    Inscription - {{ parent() }}
    {# parent() affiche le reste du block title. On ne fait que rajouter "Accueil - " au titre de la page #}
{% endblock %}

{% block menu %}
    <li><a href="{{ path('jtir_platform_index') }}">Accueil</a></li>
    <li><a href="{{ path('jtir_platform_connexion') }}">Connexion</a></li>
    <li class="active"><a href="{{ path('jtir_platform_bibliotheque_visiteur') }}">Bibliothèque de contes</a></li>
{% endblock %}

{% block body %}

    <!-- RECHERCHE D'UN CONTE -->
    <section id="bibliotheque_visiteurs">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Bibliothèque de contes</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
